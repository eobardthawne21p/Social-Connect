<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.text_field :name, class: "form-control", placeholder: "Name" %>
  </div>

  <div class="mb-3">
    <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
  </div>

  <%# Only show password fields if creating a new user or if editing and user specifically needs to update password %>
  <% if user.new_record? %>
    <div class="mb-3">
      <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
    </div>

    <div class="mb-3">
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Password" %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.date_field :birthday, class:"form-control" %>
  </div>

  <div class="mt-3">
    <%= form.submit user.new_record? ? "Sign Up" : "Update Profile", class: "btn btn-primary" %>
  </div>

  <%# Only show login link if it's a new user (during sign up) %>
  <% if user.new_record? %>
    <div class="mt-3">
      <%= link_to "Already have an account? Log In", login_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %>
