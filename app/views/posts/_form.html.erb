<% if post.errors.any? %>
  <div class="position-fixed" style="top: 60px; right: 15px; z-index: 1050; min-width: 300px;">
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
      <h4 class="alert-heading">Oops! <%= pluralize(post.errors.count, "error") %> occurred:</h4>
      <ul class="mb-0">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>

<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-sm p-4" style="max-width: 600px; width: 100%;">
    <!-- Dynamically set the heading based on whether the post is new or being edited -->
    <h1 class="text-center mb-4"><%= post.persisted? ? "Edit Post" : "Create New Post" %></h1>

    <%= form_with(model: post) do |form| %>
      <div class="mb-3">
        <%= form.label :title, class: "form-label" %>
        <%= form.text_field :title, class: "form-control", placeholder: "Post Title" %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: "form-label" %>
        <%= form.text_area :description, class: "form-control", placeholder: "Write a description..." %>
      </div>

      <div class="mb-3">
        <%= form.label :image, class: "form-label" %>
        <%= form.text_field :image, class: "form-control", placeholder: "Image URL" %>
      </div>

      <div class="mb-3">
        <%= form.label :location, class: "form-label" %>
        <%= form.text_field :location, class: "form-control", placeholder: "Location" %>
      </div>

      <div class="mb-3">
        <%= form.label :timeDate, class: "form-label" %>
        <%= form.datetime_field :timeDate, class: "form-control" %>
      </div>

      <div class="d-grid">
        <!-- Dynamically set the button text based on whether the post is new or being edited -->
        <%= form.submit post.persisted? ? "Update Post" : "Create Post", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="text-center mt-4">
  <%= link_to "Back to Posts", root_path, class: "btn btn-secondary" %>
</div>
