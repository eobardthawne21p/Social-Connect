<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= post.description %>
  </p>

  <p>
    <strong>Image:</strong>
    <% if post.image.present? %>
    <%= image_tag post.image, alt: "Post Image" %>
  <% end %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= post.location %>
  </p>

  <p>
    <strong>Time:</strong>
    <%= post.timeDate %>
  </p>

  <p>
    <strong>Likes:</strong>
    <%= post.likes %>
  </p>

</div>
