<%= turbo_frame_tag dom_id(post, :bookmark) do %>
  <% if current_user && current_user.saved_posts.where(post: post).exists? %>
    <%= button_to unsave_post_path(post), method: :post, data: { turbo_frame: dom_id(post, :bookmark) }, class: "btn btn-link p-0 text-dark", remote: true do %>
      <i class="bi bi-bookmark-fill"></i>
    <% end %>
  <% elsif current_user %>
    <%= button_to save_post_path(post), method: :post, data: { turbo_frame: dom_id(post, :bookmark) }, class: "btn btn-link p-0 text-dark", remote: true do %>
      <i class="bi bi-bookmark"></i>
    <% end %>
  <% end %>
<% end %>
