<h1>Search Results</h1>

<% if @posts.any? %>
  <div id="results">
    <% @posts.each do |post| %>
      <div class="post">
        <div class="card post-card shadow-sm">
          <% if post.image.present? %>
            <img src="<%= post.image %>" class="card-img-top" alt="<%= post.title %>">
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><%= truncate(post.description, length: 150) %></p>
            <p><strong>Location:</strong> <%= post.location %></p>
            <p><strong>Tags:</strong>
              <% post.tags.each do |tag| %>
                <%= link_to "##{tag}", results_path(query: "##{tag}"), class: 'hashtag' %>
              <% end %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <small class="text-muted">Posted on: <%= post.created_at.strftime("%B %d, %Y") %></small>
              <%= link_to 'Read more', post_path(post), class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>No posts found matching your search criteria.</p>
<% end %>
