<!-- Flash Messages -->
<div class="position-fixed" style="top: 60px; right: 15px; z-index: 1050; min-width: 250px;">
  <% if flash[:alert] || flash[:notice] %>
    <div class="alert <%= flash[:alert] ? 'alert-danger' : 'alert-success' %> alert-dismissible fade show shadow-sm" role="alert">
      <div class="text-center">
        <%= flash[:alert] || flash[:notice] %>
      </div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% flash.clear %> <!-- Clears the flash after it is displayed -->
  <% end %>
</div>

<!-- Centered Login Form -->
<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%;">
    <h1 class="text-center mb-4">Log In</h1>

    <%= form_with(url: login_path, method: :post, local: true, data: { turbo: false }) do |form| %>
      <div class="mb-3">
        <%= form.label :username, class: "form-label" %>
        <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
      </div>

      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
      </div>

      <div class="d-grid">
        <%= form.submit "Log In", class: "btn btn-primary" %>
      </div>

      <div class="mt-3 text-center">
        <%= link_to "Don't have an account? Sign Up", sign_up_path, class: "btn btn-link" %>
      </div>
    <% end %>
  </div>
</div>