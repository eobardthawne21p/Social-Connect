<%= form_with(url: login_path, method: :post, local: true, data: { turbo: false }) do |form| %>
  <% if flash[:alert] %>
    <div style="color: red">
      <h2><%= flash[:alert] %></h2>
    </div>
    <% elsif flash[:notice] %>
    <div style="color: green">
      <h2><%= flash[:notice] %></h2>
    </div>
  <% end %>

  <h1>Log In</h1>

  <div class="mb-3">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
  </div>

  <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>

  <div class="mt-3">
    <%= form.submit "Log In", class: "btn btn-primary" %>
  </div>

  <div class="mt-3">
    <%= link_to "Don't have an account? Sign Up", sign_up_path, class: "btn btn-secondary" %>
  </div>
<% end %>
